# API Environment Configuration
# Copy to `.env` and fill in values.

# Server
PORT=3000
CLIENT_URL=http://localhost:3001

# Starknet network RPC (Sepolia v0_8 recommended)
RPC_URL=https://starknet-sepolia.public.blastapi.io/rpc/v0_8

# Ready account class hash (Required)
# Example (replace with your target class hash)
READY_CLASSHASH=0x036078334509b514626504edc9fb252328d1a240e4e948bef8d0c08dff45927f

# Privy server credentials (Required)
# Get from Privy Dashboard > App settings
PRIVY_APP_ID=your_app_id
PRIVY_APP_SECRET=your_app_secret

# (Optional) Wallet API authorization key for server-side Wallet API
# Dashboard > Wallet API > Authorization Keys (prefix: wallet-auth:...)
PRIVY_WALLET_AUTH_PRIVATE_KEY=

# (Optional) Wallet policy to apply when creating wallets
PRIVY_WALLET_POLICY_ID=
